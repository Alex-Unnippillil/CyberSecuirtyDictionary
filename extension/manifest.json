{
  "manifest_version": 3,
  "name": "Cybersecurity Dictionary",
  "description": "Highlights cybersecurity terms and shows definitions on hover using a local JSON file.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["terms.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
